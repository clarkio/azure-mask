{
  "manifest_version": 3,
  "name": "Az Mask",
  "version": "1.1.10",
  "description": "Does it's best to find and conceal sensitive Azure information found in the portal views",
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "action": {
    "default_icon": "/icons/icon16.png",
    "default_popup": "/popout/popout.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.portal.azure.com/*",
        "*://portal.azure.com/*",
        "*://functions.azure.com/*",
        "*://portal.azure.us/*",
        "*://*.qnamaker.ai/*",
        "*://adf.azure.com/*",
        "*://ms-adf.azure.com/*",
        "*://portal.azure.cn/*"
      ],
      "js": [
        "/content-script/mask-process.js"
      ],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.portal.azure.com/*",
    "*://portal.azure.com/*",
    "*://portal.azure.us/*",
    "*://portal.azure.cn/*",
    "*://functions.azure.com/*",
    "*://*.qnamaker.ai/*",
    "*://adf.azure.com/*",
    "*://ms-adf.azure.com/*"
  ]
}

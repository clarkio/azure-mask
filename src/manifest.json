{
    "author": "Azure CDAs",
    "browser_action": {
        "default_icon": {
            "16": "/icons/icon16.png",
            "20": "/icons/icon16.png",
            "48": "/icons/icon48.png",
            "128": "/icons/icon128.png"
        },
        "default_popup": "/popout/popout.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.portal.azure.com/*",
                "*://portal.azure.com/*",
                "*://functions.azure.com/*"
            ],
            "js": [
                "/content-script/mask-process.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "description": "Conceals sensitive Azure information found in the portal views",
    "icons": {
        "16": "/icons/icon16.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "manifest_version": 2,
    "name": "Azure Mask",
    "permissions": [
        "activeTab",
        "storage",
        "clipboardWrite",
        "*://*.portal.azure.com/*",
        "*://portal.azure.com/*",
        "*://functions.azure.com/*"
    ],
    "version": "1.1.3",
    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}